<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="AlarmApp.Pages.NewAlarmPage"
			 xmlns:local="clr-namespace:AlarmApp.Controls"
			 Title="New Alarm">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Save" Icon="save" Command="{Binding SaveAlarmCommand}"/>
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout Spacing="0">
			<Entry Text="{Binding Name}" Placeholder="Name"/>
			<Label Text="begins at" Style="{StaticResource LargeCenteredHeading}"/>
			<TimePicker Time="{Binding Alarm.Time}" HorizontalOptions="Center"/>

			<!-- Occur Every section -->
			<BoxView HeightRequest="1" Grid.ColumnSpan="2" BackgroundColor="{StaticResource PageSeparatorColor}" Margin="0, 20, 0, 0"/>
			<Grid Padding="40, 20, 40, 30" BackgroundColor="#26000000">
				<Grid.RowDefinitions>
					<RowDefinition Height="0.5*"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="0.5*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0.3*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Label Text="Repeat every" Grid.ColumnSpan="2" Style="{StaticResource LargeCenteredHeading}"/>
				<Entry Text="{Binding FrequencyNumber, Mode=OneWayToSource}" Grid.Row="1" Keyboard="Numeric" Placeholder="15" FontSize="30"/>
				<local:CustomPicker SelectedItem="{Binding FrequencyPeriod, Mode=OneWayToSource}" Grid.Row="1" Grid.Column="1" Title="Set Frequency" Hint="Minutes" FontSize="30" Margin="0, 0, 0, 20">
					<local:CustomPicker.Items>
						<x:String>Minutes</x:String>
						<x:String>Hours</x:String>
					</local:CustomPicker.Items>
				</local:CustomPicker>

				<Label Text="For" Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource LargeCenteredHeading}"/>
				<Entry Grid.Row="3" Keyboard="Numeric" Placeholder="2" FontSize="30"/>
				<local:CustomPicker Grid.Row="3" Grid.Column="1" Title="Set Frequency" Hint="Hours" FontSize="30">
					<local:CustomPicker.Items>
						<x:String>Minutes</x:String>
						<x:String>Hours</x:String>
					</local:CustomPicker.Items>
				</local:CustomPicker>
				
			</Grid>
			<BoxView HeightRequest="1" Grid.Row="3" Grid.ColumnSpan="2" BackgroundColor="{StaticResource PageSeparatorColor}"  Margin="0, 0, 0, 20"/>
			
		<!--	<Label Text="Alarms end at" Style="{StaticResource LargeCenteredHeading}"/>
			<TimePicker Time="{Binding Alarm.Time, Mode=OneWayToSource}" HorizontalOptions="Center"/>-->
			
			<Label Text="On these days" Style="{StaticResource LargeCenteredHeading}"/>
			<!-- Day of the week selectors -->
			<Grid Padding="20">
				<local:DayOfWeekButton IsSelected="{Binding Alarm.Days.Monday}" Text="M"/>
				<local:DayOfWeekButton IsSelected="{Binding Alarm.Days.Tuesday}" Text="T" Grid.Column="1"/>
				<local:DayOfWeekButton IsSelected="{Binding Alarm.Days.Wednesday}" Text="W" Grid.Column="2"/>
				<local:DayOfWeekButton IsSelected="{Binding Alarm.Days.Thursday}" Text="T" Grid.Column="3"/>
				<local:DayOfWeekButton IsSelected="{Binding Alarm.Days.Friday}" Text="F" Grid.Column="4"/>
				<local:DayOfWeekButton IsSelected="{Binding Alarm.Days.Saturday}" Text="S" Grid.Column="5"/>
				<local:DayOfWeekButton IsSelected="{Binding Alarm.Days.Sunday}" Text="S" Grid.Column="6"/>
			</Grid>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
