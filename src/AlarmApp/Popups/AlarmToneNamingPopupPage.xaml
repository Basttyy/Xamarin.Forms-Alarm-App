<?xml version="1.0" encoding="UTF-8"?>
<popups:PopupPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="AlarmApp.Popups.AlarmToneNamingPopupPage"
		     xmlns:popups="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
				CloseWhenBackgroundIsClicked="true">
	<Frame 
		VerticalOptions="Center" 
	    HorizontalOptions="Center"
		BackgroundColor="{StaticResource ContentPageBackgroundColor}">
		<StackLayout 
	        VerticalOptions="Center" 
	        HorizontalOptions="Center" 
	        Padding="20, 20, 20, 20">
        <Label 
			Text="Give Your Tone a Name" 
			FontSize="Medium"/>
		<Entry 
			x:Name="ToneNameEntry" 
		    Placeholder="E.g. Wake Up"/>
		<Button 
			Text="Set Name" 
			BackgroundColor="{StaticResource AccentColor}" 
			HorizontalOptions="End"
			Pressed="SetNameButtonPressed"/>
    	</StackLayout>
	</Frame>
</popups:PopupPage>
